<h1>{{user}}</h1>
{{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="user">Enter Pin Name:</label>
      {{input id="user" class="form-control" value=user}}
    </div>

    <div class="form-group">
      <label for="text">
        Leave mail for the Devs and Designers to see:
      </label>
      {{textarea id="text" class="form-control" rows='5' value=text}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Save mail :D</button>
  </form>
{{else}}
  <p>{{text}}</p>
  <button class="btn btn-primary" {{action 'edit'}}>Edit</button>
  <button class="btn btn-primary" {{action 'delete'}}>delete</button>
{{/if}}