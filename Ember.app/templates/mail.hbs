{{#if isEditing}} <!--  If in Editor Mode -->
  <form>
    <div class="form-group"><!--  Input UserName  -->
      <label for="user">{{user}}</label>
      {{input id="user" class="form-control" value=user}}
    </div>
    <div class="form-group"><!--   Input Text  -->
      <label for="text">{{text}}</label>
      {{textarea id="text" class="form-control" rows='5' value=text}}
    </div>
    <!--  Save To Mailbox -->
    <button class="btn btn-primary" {{action 'save'}}>
        Save mail :D</button>
  </form>
{{else}}<!--  Otherwise, Display Content-->
  <!--  Ex. @John Smith: Says "_"  -->
  <h3>@{{user}}: Says " {{text}} "</h3>
  <button class="btn btn-primary" {{action 'edit'}}>
      Edit Note</button>
  <button class="btn btn-primary" {{action 'delete'}}>
      delete</button>
{{/if}}

{{#if repliesAreShowing}} 
  <div class="replyBox">
    {{#each replies}}
      <p>{{text}}</p>
    {{/each}}
  </div>
  <p>
    {{#link-to 'new-reply' this.id class="btn btn-default"}}
      Reply{{/link-to}}
  </p>
{{else}}
  <button class="btn btn-info" {{action 'showReplies'}}>Show Replies</button>
{{/if}}